@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="page-header header-filter" data-parallax="true" style="background-image: url(/assets/img/identity.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="title">
                    <br />
                    @ViewData["Title"]
                </h1>
                <p>Your password has been reset. Please <a asp-page="./Login">click here to log in</a>.</p>
            </div>
        </div>
    </div>
</div>