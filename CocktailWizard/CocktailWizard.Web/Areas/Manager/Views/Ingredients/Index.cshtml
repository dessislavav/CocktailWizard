@model IEnumerable<IngredientViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<table class="table list-of-ingredients">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-area="Manager" asp-controller="Ingredients" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Delete</a>
                <partial name="_DeleteModalPartial" model="@item" />
            </td>
        </tr>
        }
    </tbody>
</table>

<form>
    <div class="col-md-6">
        <div style="display:normal" id="ingrediens-div">
            <div class="m-4">
                <div>
                    Name:
                    <input type="text" class=" form-control" id="ingredient-name" />
                </div>
            </div>
            <button class="btn btn-light" id="ingrediens-to-db">Add new ingredient</button>
        </div>
    </div>
</form>


@section Scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/AddIngredientAjax.js" type="text/javascript"></script>
    <script src="~/js/ModalDeleteConfirm.js" type="text/javascript"></script>
}





