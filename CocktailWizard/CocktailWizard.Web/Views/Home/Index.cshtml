@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link href="~/assets/css/homescreen-images.css" rel="stylesheet" />
</head>

<div class="page-header header-filter" data-parallax="true" style="background-image: url('/assets/img/homepage.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="title">
                    Welcome to the Home of Unexpected, Magical, Joy
                </h1>
                <br>
                <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" target="_blank" class="btn btn-primary btn-raised btn-lg">
                    <i class="fa fa-play"></i> Watch video
                </a>
            </div>
        </div>
    </div>
</div>
<div class="main main-raised">
    <div class="container">
        <div class="section text-center">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <h2 class="title">London&apos;s Night Life</h2>
                    <h5 class="description">London is famed for its nightlife, offering world-class London theatres, top clubs in the West End, an alternative Camden scene, trendy nights out in Shoreditch and more. From evenings of comedy, theatre, music or a night out on the town, there are plenty of fun things to do in London at night. </h5>
                </div>
            </div>
            <div class="features">
                <div class="row">
                    <div class="col-md-4">
                        <div class="info">
                            <div class="icon icon-info">
                                <i class="material-icons">beenhere</i>
                            </div>
                            <h4 class="info-title">Best Bars</h4>
                            <p>Here you will find our pick of the best bars in London, just don’t blame us for the headache tomorrow.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="info">
                            <div class="icon icon-success">
                                <i class="material-icons">local_bar</i>
                            </div>
                            <h4 class="info-title">Top Cocktails</h4>
                            <p>A full list of the most-ordered drinks of 2019 because tasting them all will take too much time.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="info">
                            <div class="icon icon-danger">
                                <i class="material-icons">how_to_reg</i>
                            </div>
                            <h4 class="info-title">Get In Touch</h4>
                            <p>Cocktail Wizard is your one-stop to having a good time. Get in contact with bars directly from our website.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @*ROW WITH TOP-RATED BARS*@
        <div class="section text-center">
            <h2 class="title">Most Popular Bars</h2>
            <div class="row">
                @foreach (var bar in Model.TopBars)
                {
                    <div class="col-md-4 columnhomescreen">
                        <a asp-area="" asp-controller="Bars" asp-action="Details" asp-route-id="@bar.Id">
                            <img src="@bar.ImagePath" alt="BarImage" style="width:100%; height:240px">
                            <h4 class="card-title">
                                @bar.Name
                                <br>
                                <small class="card-description text-muted text-center">@bar.Address</small>
                            </h4>
                        </a>
                    </div>
                }
            </div>
        </div>

        @*ROW WITH TOP-RATED COCKTAILS*@
        <div class="section text-center">
            <h2 class="title">Most Popular Cocktails</h2>
            <div class="row">
                @foreach (var cocktail in Model.TopCocktails)
                {
                    <div class="col-md-4 columnhomescreen">
                        <a asp-area="" asp-controller="Cocktails" asp-action="Details" asp-route-id="@cocktail.Id">
                            <img src="@cocktail.ImagePath" alt="BarImage" style="width:100%; height:240px">
                            <h4 class="card-title">
                                @cocktail.Name
                                <br>
                            </h4>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
