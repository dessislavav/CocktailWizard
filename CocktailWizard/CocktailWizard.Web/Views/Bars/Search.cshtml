@model SearchBarViewModel
@{
    ViewData["Title"] = "Search";
}

<head>
    <link rel="stylesheet" href="~/css/barsearchpartial.css" />
</head>

<div class="page-header header-filter" data-parallax="true" style="background-color:black">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Define your search</h1>
                <div class="row mt-2">
                    <form class="col-md-12" asp-controller="Bars" asp-action="Search" method="get">
                        <row>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div id="name-button" class="custom-control custom-checkbox custom-control-inline">
                                <input asp-for="@Model.SearchByName" type="checkbox" class="custom-control-input" id="defaultInline1">
                                <label class="custom-control-label" for="defaultInline1">Name</label>
                                <span asp-validation-for="SearchByName" class="text-danger"></span>
                            </div>
                            <div id="address-button" class="custom-control custom-checkbox custom-control-inline">
                                <input asp-for="@Model.SearchByAddress" type="checkbox" class="custom-control-input" id="defaultInline2">
                                <label class="custom-control-label" for="defaultInline2">Address</label>
                                <span asp-validation-for="SearchByAddress" class="text-danger"></span>
                            </div>
                            <div id="rating-button" class="custom-control custom-checkbox custom-control-inline">
                                <input type="checkbox" asp-for="@Model.SearchByRating" class="custom-control-input" id="defaultInline3">
                                <label class="check custom-control-label" for="defaultInline3">Rating</label>
                            </div>
                        </row>
                        <div class="form-group">
                            <label class="bmd-label-floating">Your Search...</label>
                            <input asp-for="@Model.SearchName" type="text" class="form-control">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="main main-raised">
    <div class="profile-content img-fluid">
        <div class="container">
            <div class="row">
                @if (Model != null)
                {
                    if (!string.IsNullOrWhiteSpace(Model.SearchName) && !Model.SearchResults.Any())
                    {
                        <p class="alert alert-info">No bars found. Try again!</p>
                    }
                    else
                    {
                        foreach (var bar in Model.SearchResults)
                        {
                            <partial name="_SearchBarResultPartial" model="bar" />
                        }
                    }
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
